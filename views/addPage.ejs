<%- include('partials/header.ejs'); -%>
    <h1>add book</h1>
    <form action="/add" method="post">
        <label for="author">Author:</label>
        <input type="text" name="author" placeholder="author" required>
        <label for="author">Title:</label>
        <input type="text" name="title" placeholder="title" required>
        <label for="author">Rating (1-10):</label>
        <input type="number" name="rating" placeholder="rating" min="1" max="10" required>
        <label for="author">Read date (in format yyyy-mm-dd):</label>
        <input type="text" name="read_date" placeholder="date" required>
        <label for="author">Review:</label>
        <textarea name="note" rows="10" cols="50" placeholder="Your review..." required></textarea>
        <input type="submit" value="Add note">
    </form>
    <button onClick="location.href='/'">Nevermind</button>

